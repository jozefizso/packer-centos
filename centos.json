{
  "variables": {
    "iso_url": "",
    "iso_checksum": "",
    "iso_checksum_type": "sha256",
    "redhat_release": "7.6",
    "redhat_build": "1810",
    "redhat_platform": "x86_64",
    "artifact_description": "",
    "artifact_version": "",
    "artifact_revision": "01",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_private_key_file": "~/.vagrant.d/insecure_private_key",
    "disk_size": "20480"
  },

  "builders": [
    {
      "type": "vmware-iso",
      "name": "centos-{{user `redhat_release`}}-vmware_desktop",
      "vm_name": "centos7",
      "vmdk_name": "disk1",

      "cpus": "2",
      "memory": "1024",

      "guest_os_type": "centos7-64",
      "http_directory": "http",
      "output_directory": "builds",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "ssh_username": "{{user `ssh_username`}}",
      "ssh_private_key_file": "{{user `ssh_private_key_file`}}",
      "ssh_wait_timeout": "15m",

      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos7.ks<enter><wait>"
      ],
      "shutdown_command": "sudo -S /sbin/halt -h -p",

      "version": "11",
      "disk_type_id": "0",
      "disk_size": "{{user `disk_size`}}",

      "usb": false,

      "vmx_data": {
        "scsi0.virtualDev": "pvscsi",
        "ethernet0.virtualDev": "vmxnet3"
      }
    }
  ],
  
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": "9",
      "output": "centos-{{user `redhat_release`}}-{{user `redhat_platform`}}-vagrant-{{user `redhat_build`}}_{{user `artifact_revision`}}.box",
      "vagrantfile_template": "scripts/Vagrantfile"
    }
  ]
}
